FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fluxScheme      HLLC;

ddtSchemes
{
    default         Euler;
    timeIntegrator  RK4SSP;
}

gradSchemes
{
    default         cellMDLimited leastSquares 1.0;
}

divSchemes
{
    default         none;
    div(alphaRhoPhi.RDX,lambda.RDX) Riemann;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default             cubic;
    reconstruct(alpha)  Minmod;
    reconstruct(rho)    Minmod;
    reconstruct(U)      MinmodV;
    reconstruct(e)      Minmod;
    reconstruct(p)      Minmod;
    reconstruct(c)      Minmod;

    "reconstruct(.*)" Minmod;
}

snGradSchemes
{
    default         corrected;
}


