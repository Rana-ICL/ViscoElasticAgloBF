     \\/     M anipulation  |
\*---------------------------------------------------------------------------*/
FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
convertToMeters 1;

theta   #calc "5.0*Foam::constant::mathematical::pi/180.0";
z       0.1;
R       0.025;
x       #calc "$R*cos($theta)";
y       #calc "$R*sin($theta)";
ny      #calc "-$R*sin($theta)";
size    #calc "1.0/4.0/1000";
nz      #calc "round($z/$size)";
nR      #calc "round($R/$size)";

vertices
(
    (0  0   0)
    ($x $ny 0)
    ($x $y  0)
    (0  0   $z)
    ($x $ny $z)
    ($x $y  $z)
);

blocks
(
    hex (0 1 2 0 3 4 5 3) ($nR 1 $nz) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    front
    {
        type wedge;
        faces
        (
            (0 2 5 3)
        );
    }
    back
    {
        type wedge;
        faces
        (
            (0 1 4 3)
        );
    }
    top
    {
        type patch;
        faces
        (
            (3 4 5 3)
        );
    }
    bottom
    {
        type patch;
        faces
        (
            (0 1 2 0)
        );
    }
    outlet
    {
        type patch;
        faces
        (
            (1 2 5 4)
        );
    }

);

mergePatchPairs
(
);
